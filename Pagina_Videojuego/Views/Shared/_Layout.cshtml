<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CiberMedia</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

   

    <div id="container">
        <br />
        <div id="contenido">
            <div id="banner">
                <img class="imgbanner" src="~/Images/principal/Logo.png" alt="Logo" style="width:20%; height:54px; float:left; background-color:#1849AB" />
                <nav id="menuArriba">
                    <ul class="menu">
                        <li><a href="#">Inicio</a></li>
                        <li><a href="#">VideoJuegos</a></li>
                        <li><a href="#">Peliculas</a></li>
                        <li><a href="#">Acerda de</a></li>
                    </ul>
                </nav>
            </div>

            <br />

            <!--****** Carrusel******* -->
            <div id="carrusel">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item imgCarrusel active">
                            <img src="~/Images/Carrusel/jd5kga5lwd131.jpg" alt="Call of Duty" style="width: 100%;">
                        </div>

                        <div class="item imgCarrusel">
                            <img src="~/Images/Carrusel/Battlefield_Banner.jpg" alt="Battlefield" style="width: 100%;">
                        </div>

                        <div class="item imgCarrusel">
                            <img src="~/Images/Carrusel/genshin-impact-reroll-banner.jpg" alt="Genshin Impact" style="width:100%;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <section class="mostrar">
                @RenderBody()
            </section>



            <section id="cuerpo">

                <div id="juegos-izquierda">

                    <h2 class="titulo-juegos">Ultimos juegos agregados</h2>

                    <img class="cara-img" src="~/Images/games/450_1000.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/games/51476a53-97d4-4b4b-b38f-15b9b2217404.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/games/Battlefield-V-PC.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/games/call-of-duty-black-ops-xbox-360_49564.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/games/450_1000.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/games/Battlefield-V-PC.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/games/max-payne-3-playstation-3-xbox-360_117202.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/games/call-of-duty-black-ops-xbox-360_49564.jpg" alt="Caratula" />

                </div>

                <div id="formulario-derecha">

                    <h2 class="titulo-juegos">Ingresar</h2>

                    @{
                        if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert-warning">@ViewBag.Message</div>
                        }
                    }

                    <form action="/Home/Login" method="post">
                        <div class="form-group">
                            <label>Ingresa tu email</label>
                            <input class="form-control" type="text" name="idUsu" value="" />
                        </div>
                        <div class="form-group">
                            <label>Ingresa tu contraseña</label>
                            <input class="form-control" type="password" name="password" value="" />
                        </div>
                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" value="INGRESAR" />
                        </div>
                    </form>

                    <h2 class="titulo-juegos">REGISTRO</h2>

                        <a>@Html.ActionLink("REGISTRO", "registrarUsuario", "Home", new { @class="btn btn-primary"})</a>

                    <h2 class="titulo-juegos">Ultimas Noticia</h2>

                    <a href="https://www.3djuegos.com/juegos/articulos/2106/0/analisis-xbox-series-x-y-s-y-sus-primeros-juegos-como-es-la-next-gen-de-microsoft/">
                        <img alt="Noticia" src="https://i.3djuegos.com/juegos/3405/_articulos_/fotos/articulos/_articulos_-5292170.jpg" style="width:100%; border:thick; border-radius:10px;" />
                        <h4 style="text-align: center">Análisis Xbox Series X y S y sus primeros juegos</h4>
                    </a>

                    <a href="https://www.3djuegos.com/noticias-ver/209146/ps5-no-sera-compatible-con-almacenamiento-externo-ssd-en-su/">
                        <img alt="Noticia" src="https://i.3djuegos.com/juegos/15263/playstation_5/fotos/noticias/playstation_5-5294956.jpg" style="width:100%; border:thick; border-radius:10px;" />
                        <h4 style="text-align: center">PS5 no será compatible con almacenamiento externo SSD</h4>
                    </a>
                </div>

                

            </section>

            <section id="cuerpo">

                <div id="juegos-izquierda">

                    <h2 class="titulo-juegos">Ultimas peliculas en estreno</h2>

                    <img class="cara-img" src="~/Images/movies/HP3149_83542499-5f51-4f2c-98bb-fbf7459bc0c5_1024x1024.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/movies/OIP (1).jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/movies/OIP (2).jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/movies/OIP (3).jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/movies/OIP.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/movies/pulp-fiction-521961b7ea925.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/movies/OIP (1).jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/movies/OIP (2).jpg" alt="Caratula" />

                </div>

                <div id="formulario-derecha">

                    <h2 class="titulo-juegos">Ofertas del Dia</h2>

                    <div id="carrusel">
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item oferta active">
                                    <img src="~/Images/Carrusel/Off.jpg" alt="Oferta1" style="width: 100%; height: 594px">
                                </div>

                                <div class="item oferta">
                                    <img src="~/Images/Carrusel/Off2.jpg" alt="Oferta2" style="width: 100%; height: 594px">
                                </div>

                                <div class="item oferta">
                                    <img src="~/Images/Carrusel/Off3.jpg" alt="Oferta3" style="width: 100%; height: 594px">
                                </div>
                            </div>
                        </div>
                    </div>


                </div>




            </section>



            <section id="cuerpo">
                <br /><br />
                <div id="topIzquierda">

                    <h2 class="titulo-juegos">Top VideoJuegos</h2>

                    <ul class="top">
                        <li><a href="#">Dreams</a></li>
                        <li><a href="#">Niho 2</a></li>
                        <li><a href="#">Ori</a></li>
                        <li><a href="#">Valorant</a></li>
                        <li><a href="#">Doom Eternal</a></li>
                        <li><a href="#">Final Fantasy VII</a></li>
                        <li><a href="#">Half-Life Alyx</a></li>
                        <li><a href="#">Ghost of Tushima</a></li>
                        <li><a href="#">The Last of Us</a></li>
                        <li><a href="#">Animal Crossing</a></li>
                        <li><a href="#">Genshin impact</a></li>
                    </ul>

                </div>

                <div id="topDerecha">

                    <h2 class="titulo-juegos">Resumen del top</h2>

                    <div id="video">
                        <iframe width="560" height="315" src="https://www.youtube.com/embed/5WeJPXb9Nzo" frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>

                </div>




            </section>

            <footer>
                <img class="foot" src="~/Images/principal/jottlyfooterstyles.png" alt="Footer" />
            </footer>


        </div>



        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
