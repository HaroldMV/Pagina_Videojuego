<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/estiloAdmin.css" rel="stylesheet" />
</head>
<body>
        <div id="container">
            <br />
            <div id="contenido">
                <div id="banner">
                    <img class="imgbanner" src="~/Images/principal/Logo.png" alt="Logo" style="width:20%; height:54px; float:left; background-color:#1849AB" />
                    <nav id="menuAdmin">
                        <ul class="nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Inicio", "Index", "Profile")</li>
                                <li>
                                    <a href="#">Usuarios</a>
                                    <ul>
                                        <li>@Html.ActionLink("Registrar Usuario", "registrarUsuario", "Usuario")</li>
                                        <li>@Html.ActionLink("Lista de Usuarios", "listadoUsuarioPag", "Usuario")</li>
                                        <li>@Html.ActionLink("Consulta de Usuarios", "listadoUsuarioxNombre", "Usuario")</li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">Videojuegos</a>
                                    <ul>
                                        <li>@Html.ActionLink("Registrar Videojuego", "registroVideoJuego", "Videojuego")</li>
                                        <li>@Html.ActionLink("Lista de Videojuegos", "ListaVideojuegoPag", "Videojuego")</li>
                                        <li>@Html.ActionLink("Consultar Videojuegos", "listadoVideojuegoxNombre", "Videojuego")</li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">Peliculas</a>
                                    <ul>
                                        <li>@Html.ActionLink("Registrar Pelicula", "registroPelicula", "Pelicula")</li>
                                        <li>@Html.ActionLink("Lista de Peliculas", "listadoPeliculaPag", "Pelicula")</li>
                                        <li>@Html.ActionLink("Consultar Peliculas", "listadoPeliculaxNombre", "Pelicula")</li>
                                    </ul>
                                </li>

                                <li>@Html.ActionLink("Salir", "Logout", "Home")</li>
                            }
                        </ul>
                    </nav>
                </div>

                <br />
                @RenderBody()


                <footer>
                    <img class="foot" src="~/Images/principal/jottlyfooterstyles.png" alt="Footer" />
                </footer>


            </div>



            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>

    </body>

</html>
